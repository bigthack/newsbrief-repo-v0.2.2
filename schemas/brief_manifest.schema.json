{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NewsBrief Daily Manifest",
  "type": "object",
  "required": [
    "date",
    "headline",
    "stories"
  ],
  "properties": {
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "headline": {
      "type": "string",
      "minLength": 1
    },
    "stories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "headline",
          "summary",
          "sources"
        ],
        "properties": {
          "headline": {
            "type": "string",
            "minLength": 1
          },
          "summary": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "sentence",
                "source"
              ],
              "properties": {
                "sentence": {
                  "type": "string",
                  "minLength": 1
                },
                "source": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            }
          },
          "why_it_matters": {
            "type": "string"
          },
          "disputed": {
            "type": "string"
          },
          "sources": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "id",
                "title",
                "url"
              ],
              "properties": {
                "id": {
                  "type": "integer",
                  "minimum": 1
                },
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "url": {
                  "type": "string",
                  "format": "uri"
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}